<h3>Listing cloud_environments</h3>

<table class="table table-striped table-bordered table-hover table-condensed">
  <tr>
    <th>Name</th>
    <th>internal_vip</th>
    <th>external_vip</th>

    <th>host_network</th>
    <th>host_vlan</th>
    <th>host_gateway</th>

    <th>container_network</th>
    <th>container_vlan</th>
    <th>container_gateway</th>

    <th>overlay_network</th>
    <th>overlay_vlan</th>
    <th>overlay_gateway</th>

    <th>storage_network</th>
    <th>storage_vlan</th>
    <th>storage_gateway</th>

    <th>swift_network</th>
    <th>swift_vlan</th>
    <th>swift_gateway</th>
    <th>notes</th>

    <th></th>
    <th></th>
  </tr>

<% @cloud_environments.each do |cloud_environment| %>
  <tr>
    <td><%= link_to cloud_environment.name, cloud_environment %></td>
    <td><%= cloud_environment.internal_vip %></td>
    <td><%= cloud_environment.external_vip %></td>
    <td><%= cloud_environment.host_network %></td>
    <td><%= cloud_environment.host_vlan %></td>
    <td><%= cloud_environment.host_gateway %></td>


    <td><%= cloud_environment.container_network %></td>
    <td><%= cloud_environment.container_vlan %></td>
    <td><%= cloud_environment.container_gateway %></td>
 
    <td><%= cloud_environment.overlay_network %></td>
    <td><%= cloud_environment.overlay_vlan %></td>
    <td><%= cloud_environment.overlay_gateway %></td>

    <td><%= cloud_environment.storage_network %></td>
    <td><%= cloud_environment.storage_vlan %></td>
    <td><%= cloud_environment.storage_gateway %></td>

    <td><%= cloud_environment.swift_network %></td>
    <td><%= cloud_environment.swift_vlan %></td>
    <td><%= cloud_environment.swift_gateway %></td>
    <td><%= cloud_environment.notes %></td>
   
 
    <td><%= link_to 'Edit', edit_cloud_environment_path(cloud_environment) %></td>
    <td><%= link_to 'Destroy', cloud_environment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

