<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @host.name %>
</p>

<p>
  <b>Kernel:</b>
  <%= @host.kernel %>
</p>

<p>
  <b>Operating system:</b>
  <%= @host.operating_system %>
</p>

<p>
  <b>Os release:</b>
  <%= @host.os_release %>
</p>

<p>
  <b>Ip:</b>
  <%= @host.ip %>
</p>

<b>Tags:</b>
<% @host.tags.any? %>
<ul>
<% @host.tags.sort.each do |tag| %>
  <li><%= link_to tag.name, tagged_url(:tag => tag.name) %></li>
<% end %>


<%= link_to 'Edit', edit_host_path(@host) %> |
