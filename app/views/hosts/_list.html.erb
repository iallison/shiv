<h3>Hosts Listing</h3>

<table class="table table-striped table-bordered table-hover table-condensed">
  <tr>
    <th>Name</th>
    <th>Environment</th>
    <th>OS</th>
    <th>Release</th>
    <th>Memory</th>
    <th>IP</th>
    <th></th>
    <th></th>
  </tr>

<% @hosts.each do |host| %>
  <tr>
    <td><%= link_to host.name, host_path(host.id) %></td>
    <td><%= host.cloud_environment %></td>
    <td><%= host.operating_system %></td>
    <td><%= host.os_release %></td>
    <td><%= host.memory %> (GB)</td>
    <td><%= host.ip %></td>
    <td><%= link_to 'Edit', edit_host_path(host) %></td>
    <td><%= link_to 'Destroy', host, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

